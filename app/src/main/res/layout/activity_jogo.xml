                android:text="btn7"
                android:textColor="@color/black"
                android:textSize="10dp" />

            <ImageButton
                android:id="@+id/bt8"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="50dp"
                android:backgroundTint="@color/button"
                android:text="btn8"
                android:textColor="@color/black"
                android:textSize="10dp" />

            <ImageButton
                android:id="@+id/bt9"
                android:layout_width="80dp"
